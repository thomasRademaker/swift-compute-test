struct Story: Decodable {

    struct Author: Decodable {
        let id: Int
        let name: String
        let avatar: String
    }

    struct Thumbnail: Decodable {
        let raw: String
        let desktop: String
    }

    let id: Int
    let title: String
    let type: String
    let commentCount: Int
    let tags: [String]
    let date: Date
    let updatedAt: Date
    let slug: String
    let author: Author
    let thumbnail: Thumbnail
}